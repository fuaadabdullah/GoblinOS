# Create this secret manually or use Sealed Secrets / External Secrets Operator
# DO NOT commit this file with real secrets

apiVersion: v1
kind: Secret
metadata:
  name: overmind-secrets
type: Opaque
stringData:
  # Replace these with your actual API keys
  gemini_api_key: "your_gemini_api_key_here"
  deepseek_api_key: "your_deepseek_api_key_here"
  openai_api_key: "your_openai_api_key_here"  # Optional

---
# To create this secret from a file:
# kubectl create secret generic overmind-secrets \
#   --from-literal=gemini_api_key=YOUR_KEY_HERE \
#   --from-literal=deepseek_api_key=YOUR_KEY_HERE \
#   --from-literal=openai_api_key=YOUR_KEY_HERE

# Or use base64 encoding:
# echo -n "your_api_key" | base64
# Then update the secret with data: instead of stringData:
