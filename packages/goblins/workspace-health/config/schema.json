{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"runEslint": {
			"type": "boolean",
			"description": "Whether to run ESLint checks",
			"default": true
		},
		"runTypecheck": {
			"type": "boolean",
			"description": "Whether to run TypeScript type checking",
			"default": true
		},
		"runTests": {
			"type": "boolean",
			"description": "Whether to run test suites",
			"default": true
		},
		"runSmoke": {
			"type": "boolean",
			"description": "Whether to run smoke tests",
			"default": true
		},
		"smokeUrl": {
			"type": "string",
			"description": "URL to test for smoke tests",
			"default": "http://localhost:3000"
		},
		"timeout": {
			"type": "number",
			"description": "Timeout in milliseconds for health checks",
			"default": 30000,
			"minimum": 1000
		}
	},
	"additionalProperties": false
}
