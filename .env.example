# GoblinOS Environment Variables
# Copy this file to .env and fill in your actual API keys
# DO NOT commit .env to git - it should be in .gitignore

# =============================================================================
# AI Provider API Keys
# =============================================================================

# OpenAI (GPT-4, GPT-3.5-turbo)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Anthropic (Claude 3.5 Sonnet, Claude 3 Opus)
# Get your key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-...

# Google Gemini (Gemini Pro, Gemini Flash)
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=AIza...

# DeepSeek (if using cloud API instead of local)
# Get your key from: https://platform.deepseek.com/api_keys
DEEPSEEK_API_KEY=sk-...

# =============================================================================
# Local Model Configuration (No API key required)
# =============================================================================

# Ollama endpoint (default: http://localhost:11434)
OLLAMA_BASE_URL=http://localhost:11434

# Default Ollama model
OLLAMA_MODEL=qwen2.5:3b

# =============================================================================
# Database Configuration
# =============================================================================

# SQLite database path for GoblinOS Desktop
GOBLIN_DB_PATH=${HOME}/.goblinos/goblin-memory.db

# =============================================================================
# Application Configuration
# =============================================================================

# Temporary directory for builds (important on macOS to avoid disk space issues)
TMPDIR=/tmp

# GoblinOS config file path
GOBLINOS_CONFIG=${PWD}/goblins.yaml

# =============================================================================
# Development Settings
# =============================================================================

# Enable debug logging
DEBUG=false

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable telemetry
TELEMETRY_ENABLED=false

# =============================================================================
# Cost Tracking
# =============================================================================

# Enable cost tracking (default: true)
COST_TRACKING_ENABLED=true

# Cost alert threshold (USD)
COST_ALERT_THRESHOLD=10.00

# =============================================================================
# Security Settings
# =============================================================================

# Enable secrets encryption with sops (optional)
SOPS_ENABLED=false

# Age key for sops encryption (if using age instead of gpg)
# SOPS_AGE_KEY_FILE=${HOME}/.config/sops/age/keys.txt
